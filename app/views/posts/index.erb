<% @posts.each do |post|
	comment_count = post.comments.count
	comment_text = case comment_count
		when 0 then 'No Comments'
		when 1 then '1 Comment'
		else "#{comment_count} Comments"
	end %>
	<div class="post constrain min">
		<%= erb :'posts/post', locals: {post: post} %>
		<div class="footer cf">
			<a class="button left" href="<%= post.link %>#comments"><i class="icon-comment"></i> <%= comment_text %></a>
			<a class="button twitter left no-text-mobile" href="<%= twitter_share_link post.link %>" target="_blank"><i class="icon-twitter"></i><span> Twitter</span></a>
			<a class="button facebook left no-text-mobile" href="<%= facebook_share_link post.link %>" target="_blank"><i class="icon-facebook"></i><span> Facebook</span></a>
		</div>
	</div>
<% end %>
<% if @show_more_link %>
	<a class="load-more js-ajax-replace" href="/blog?page=<%= @current_page + 1 %>"><i class="icon-plus-sign"></i> Load more posts</a>
<% end %>