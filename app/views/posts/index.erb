<% @posts.each do |post|
	comment_count = post.comments.count
	comment_text = case comment_count
		when 0 then 'No Comments'
		when 1 then '1 Comment'
		else "#{comment_count} Comments"
	end %>
	<div class="post constrain min">
		<%= erb :'posts/post', locals: {post: post} %>
		<div class="footer">
			<a class="button" href="<%= post.link %>#comments"><i class="icon-comment"></i> <%= comment_text %></a>
			<a class="button facebook right" href="<%= facebook_share_link post.link %>" target="_blank"><i class="icon-facebook"></i> Facebook</a>
			<a class="button twitter right" href="<%= twitter_share_link post.link %>" target="_blank"><i class="icon-twitter"></i> Twitter</a>
		</div>
	</div>
<% end %>