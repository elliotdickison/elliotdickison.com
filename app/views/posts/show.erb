<% post ||= @post %>
<% comments = post.comments.order('created_at ASC') %>
<article class="post center">
	<a href="/blog" class="back-link"><i class="icon-double-angle-left"></i> Back to all posts</a>
	<%= erb :'posts/post' %>
	<footer class="cf">
		<a class="button twitter left" href="<%= twitter_share_link post.link %>" target="_blank"><i class="icon-twitter"></i> Tweet</a>
		<a class="button facebook left" href="<%= facebook_share_link post.link %>" target="_blank"><i class="icon-facebook"></i> Share</a>
	</footer>
</article>
<div id="comments" class="center">
	<h3><i class="icon-comments"> </i>Comments</h3>
	<%= '<div class="sad">Sad, no one has commented yet. A pity comment from you, quis√°z?</div>' if comments.empty? %>
	<% comments.each_with_index do |comment, i| %>
		<%= erb :'comments/comment', locals: {comment: comment, number: i + 1} %>
	<% end %>
</div>
<div id="comment_form" class="center">
	<h3>Leave your own!</h3>
	<%= get_message 'comment_form' %>
	<%= erb :'comments/form', locals: {post: post} %>
</div>