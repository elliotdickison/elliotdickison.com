<% post ||= @post %>
<header>
	<h2><a href="<%= post.link %>"><%= post.title %></a></h2>
	<time datetime="<%= post.published_at ? post.published_at.strftime("%Y-%m-%d") : '' %>" pubdate><i class="icon-time"></i> <%= post.published_at ? post.published_at.strftime("%B %-d, %Y") : 'Not published' %></time>
</header>
<div class="body"><%= post %></div>
<script src="//google-code-prettify.googlecode.com/svn/loader/run_prettify.js?lang=javascript&skin=desert"></script>