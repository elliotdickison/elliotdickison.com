                <li><a href="//instagram.com/<%= settings.instagram_id %>" title="instagram"><i class="icon-instagram mobile-only"></i><span class="not-on-mobile">Instagram</span></a></li>
                <li><a type="application/rss+xml" rel="alternate" href="/feed" title="rss"><i class="icon-rss mobile-only"></i><span class="not-on-mobile">Rss</span></a></li>
            </ul>
