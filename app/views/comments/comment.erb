<% comment ||= @comment %>
<% comment_number ||= comment.id %>
<div class="comment <%= ' alternate' if alternate %>" id="comment-<%= comment.id %>">
	<%= comment.website.blank? ? '' : "<a href='#{comment.website}' target='_blank'>" %>
	<img class="avatar" src="<%= comment.gravatar_src %>" />
	<%= comment.website.blank? ? '' : '</a>' %>
	<header>
		<h5><%= comment.website.blank? ? comment.commenter : "<a href='#{comment.website}' target='_blank'>#{comment.commenter}</a>" %><a class="right" href="#comment-<%= comment.id %>">#<%= comment_number %></a></h5>
		<time datetime="<%= comment.created_at.strftime("%Y-%m-%d") %>"><i class="icon-time"></i> <%= comment.created_at.strftime("%B %-d, %Y") %></time>
	</header>
	<div class="body"><%= comment %></div>
	<% if admin_mode? %>
		<form action="/comments/<%= comment.id %>" method="post">
		  <input type="hidden" name="_method" value="delete" /> 
		  <input type="submit" value="delete" />
		</form>
	<% end %>
</div>