<% @message ||= Message.new %>
<div class="contact center">
	<%= get_message 'contact_form' %>
	<h3>Say Hello!</h3>
	<p>Shoot me a message at <a href="mailto:ejdickison@gmail.com">ejdickison@gmail.com</a> or fill out the form below and hit &#8220;Send&#8221;.</p>
	<form action="/contact" method="post">
		<label for="message_name">Name</label><br />
		<input id="message_name" name="message[name]" type="text" value="<%= @message.name %>" />
		<label for="message_email">Email</label><br />
		<input id="message_email" name="message[email]" type="email" value="<%= @message.email %>" />
		<label for="message_body">Message</label><br />
		<textarea id="message_body" name="message[body]" rows="10"><%= @message.body %></textarea>
		<input type="submit" value="Send" />
	</form>
</div>