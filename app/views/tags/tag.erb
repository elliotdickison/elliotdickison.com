<div class="center">
	<a href="/blog/tags"><i class="icon-double-angle-left"></i> All tags</a>
	<h2><%= @tag.name %></h2>
</div>
<ul class="center tags cf">
	<% @tag.posts.where('published_at IS NOT NULL').order('published_at DESC').each do |post| %>
		<li><a href="<%= post.link %>"><%= post.title %></a></li>
	<% end %>
</ul>